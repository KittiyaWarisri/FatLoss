<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/img_girl"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_food"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:drawableTop="@drawable/dinner"
            android:text="FOOD"
            android:textColor="#fff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_exercise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:drawableTop="@drawable/ic_directions_run_black_24dp"
            android:text="EXERCISE"
            android:textColor="#fff"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_goal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"

            android:drawableTop="@drawable/ic_flag_black_24dp"
            android:text="GOAL"
            android:textColor="#fff"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_optimization"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:backgroundTint="@color/colorAccent"

            android:drawableTop="@drawable/ic_monetization_on_black_24dp"
            android:text="OPTIMIZATION"
            android:textColor="#000"
            android:textSize="20sp"

            />


    </LinearLayout>

</LinearLayout>